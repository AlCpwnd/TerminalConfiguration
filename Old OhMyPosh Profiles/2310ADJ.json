{
	"console_title": true,
	"console_title_style": "template",
	"console_title_template": "{{ if .Root }}\u26A1{{end}} {{ .Path }}",
	"blocks": [
	{
		"alignment": "right",
		"segments": [
			{
				"foreground": "#009dff",
				"template": " {{ .CurrentDate | date .Format }} ",
				"properties": {
				"time_format": "15:04:05"
				},
				"style": "plain",
				"type": "time"
			},
			{
				"type": "battery",
				"style": "diamond",
				"leading_diamond": "\ue0b2",
				"trailing_diamond": "\ue0b0",
				"foreground": "#000000",
				"background": "#00ff00",
				"background_templates": [
					"{{if and (lt .Percentage 50) (ge .Percentage 40)}}#fae501{{end}}",
					"{{if and (lt .Percentage 40) (ge .Percentage 20)}}#fa9201{{end}}",
					"{{if and (lt .Percentage 20)}}#f70000{{end}}"
				],
				"properties": {
					"discharging_icon": " \uf490 ",
					"charging_icon": " \uf0e7 ",
					"charged_icon": " \ufba3 "
				},
				"template": "{{if and (eq .State.String \"Discharging\") (lt .Percentage 50) (not .Error) }} {{ .Percentage }}{{ end }}{{ .Icon }}"
			}
		],
		"type": "prompt",
		"vertical_offset": -1
    },
	{
		"alignment": "left",
		"newline" : true,
		"segments": [
			{
				"foreground": "#009dff",
				"style": "plain",
				"properties" : {
					"mapped_shell_names" : {
						"pwsh" : "PS"
					}
				},
				"template": "<#ffffff>[</>\uf489 {{ .Name }}<#ffffff>]</>",
				"type": "shell"
			},
			{
				"foreground": "#ffffff",
				"style": "plain",
				"template": " \uf007 {{ .UserName }} ",
				"type": "session"
			},
			{
				"foreground": "#009dff",
				"properties": {
					"style": "agnoster_short",
					"home_icon" : "\uf7db ",
					"mapped_locations" : {
						"~\\OneDrive - BKM NV" : "\ue762 ",
						"~\\Downloads" : "\uf6d9 ",
						"~\\Git" : "\uf09b "
					},
					"folder_separator_icon": "\\",
					"max_depth": 7,
            		"enable_hyperlink": true
				},
				"style": "plain",
				"template": "<#ffffff>[</>{{ .Path }}<#ffffff>]</>",
				"type": "path"
			},
			{
				"type": "git",
				"style": "plain",
				"foreground": "#ffffff",
				"properties": {
					"display_status": true,
					"fetch_status": true,
					"fetch_stash_count": true,
					"fetch_upstream_icon": true
				},
				"template": " {{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uF044 {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uF046 {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} \uF692 {{ .StashCount }}{{ end }}"
			},
			{
				"foreground": "#ffffff",
				"foreground_templates": [
					"{{ if gt .Code 0 }}#ed0909{{ end }}"
				],
				"properties": {
					"always_enabled": true
				},
				"style": "plain",
				"template": "{{ if gt .Code 0 }} \uf071 {{ else }} \uf42e {{ end }}",
				"type": "exit"
			},
			{
				"type" : "text",
				"style" : "plain",
				"foreground": "#ffffff",
				"template" : "> "
			}
		],
		"type" : "prompt"
	}
	],
	"version": 3
}
