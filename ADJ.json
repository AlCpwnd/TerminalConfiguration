{
	"$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
	"blocks": [
	{
		"alignment": "right",
		"segments": [
			{
				"foreground": "#007ACC",
				"template": " {{ .CurrentDate | date .Format }} ",
				"properties": {
				"time_format": "15:04:05"
				},
				"style": "plain",
				"type": "time"
			},
			{
				"type": "battery",
				"style": "diamond",
				"leading_diamond": "\ue0b2",
				"trailing_diamond": "\ue0b0",
				"foreground": "#000000",
				"background": "#00ff00",
				"background_templates": [
					"{{if and (lt .Percentage 50) (ge .Percentage 40)}}#fae501{{end}}",
					"{{if and (lt .Percentage 40) (ge .Percentage 20)}}#fa9201{{end}}",
					"{{if and (lt .Percentage 20)}}#f70000{{end}}"
				],
				"properties": {
					"discharging_icon": " \uf490 ",
					"charging_icon": " \uf0e7 ",
					"charged_icon": " \ufba3 "
				},
				"template": "{{if and (eq .State.String \"Discharging\") (lt .Percentage 50) (not .Error) }} {{ .Percentage }}{{ end }}{{ .Icon }}"
			}
		],
		"type": "prompt",
		"vertical_offset": -1
    },
	{
		"alignment": "left",
		"newline" : true,
		"segments": [
			{
				"foreground": "#0077c2",
				"style": "plain",
				"properties" : {
					"mapped_shell_names" : {
						"pwsh" : "PS"
					}
				},
				"template": "<#ffffff>[</>\uf489 {{ .Name }}<#ffffff>]</>",
				"type": "shell"
			},
			{
				"foreground": "#ffffff",
				"style": "plain",
				"template": "{{ if .SSHSession }}\uF817 {{ end }} \uf007 {{ .UserName }} ",
				"type": "session"
			},
			{
				"foreground": "#009dff",
				"properties": {
					"style": "agnoster",
					"home_icon" : "\uf7db",
					"mapped_locations" : {
						"~\\OneDrive - BKM NV" : "\ue762 ",
						"~\\Downloads" : "\uf6d9 ",
						"~\\Git" : "\uf09b "
					}
				},
				"style": "plain",
				"template": "<#ffffff>[</>{{ .Path }}<#ffffff>]</>",
				"type": "path"
			},
			{
				"foreground": "#ffffff",
				"foreground_templates": [
					"{{ if gt .Code 0 }}#ed0909{{ end }}"
				],
				"properties": {
					"always_enabled": true
				},
				"style": "plain",
				"template": "{{ if gt .Code 0 }} \uf071 {{ else }} \uf42e {{ end }}",
				"type": "exit"
			},
			{
				"type" : "text",
				"style" : "plain",
				"foreground": "#ffffff",
				"template" : "> "
			}
		],
		"type" : "prompt"
	}
	],
	"version": 2
}
